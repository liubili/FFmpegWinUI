<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FFmpegWinUI.Page.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FFmpegWinUI.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- 主标题区域 -->
            <StackPanel Spacing="8">
                <TextBlock Text="3FUI"
                           Style="{StaticResource TitleLargeTextBlockStyle}"
                           FontSize="48"
                           FontWeight="Bold"/>
                <TextBlock Text="FFmpeg 可视化编码工具 - WinUI 3 版本"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- 信息提示 -->
            <InfoBar Title="欢迎使用 FFmpeg WinUI"
                     Message="这是从VB项目移植而来的WinUI 3版本，提供现代化的用户界面和更好的性能"
                     Severity="Informational"
                     IsOpen="True"
                     IsClosable="False"
                     Margin="0,8,0,0"/>

            <!-- 功能区域 -->
            <Grid ColumnSpacing="16" Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 快速开始 -->
                <Border Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="快速开始" FontSize="18" FontWeight="SemiBold"/>
                        <StackPanel Spacing="8">
                            <HyperlinkButton Content="1. 准备文件 - 添加要处理的视频文件"/>
                            <HyperlinkButton Content="2. 参数面板 - 配置编码参数"/>
                            <HyperlinkButton Content="3. 编码队列 - 开始批量编码"/>
                        </StackPanel>

                        <TextBlock Text="推荐工作流程"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="准备文件 → 加载预设 → 添加到队列 → 开始编码"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- 功能说明 -->
                <Border Grid.Column="1"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="16">
                    <StackPanel Spacing="12">
                        <TextBlock Text="主要功能" FontSize="18" FontWeight="SemiBold"/>
                        <StackPanel Spacing="6">
                            <TextBlock Text="• 批量视频编码与转码" FontSize="13"/>
                            <TextBlock Text="• 预设参数管理" FontSize="13"/>
                            <TextBlock Text="• 实时编码进度监控" FontSize="13"/>
                            <TextBlock Text="• 高级滤镜与画质优化" FontSize="13"/>
                            <TextBlock Text="• 硬件加速支持" FontSize="13"/>
                            <TextBlock Text="• 字幕自动混流" FontSize="13"/>
                        </StackPanel>

                        <TextBlock Text="支持的格式"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="MP4, MKV, AVI, MOV, WebM, FLV 等主流视频格式"
                                   FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- 快捷链接 -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,8,0,0">
                <StackPanel Spacing="12">
                    <TextBlock Text="相关链接" FontSize="18" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <HyperlinkButton Content="FFmpeg 官网" NavigateUri="https://ffmpeg.org"/>
                        <HyperlinkButton Content="使用文档"/>
                        <HyperlinkButton Content="常见问题"/>
                        <HyperlinkButton Content="反馈问题"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 底部版本信息 -->
            <TextBlock Text="FFmpegWinUI v1.0 - 基于 FFmpeg 和 WinUI 3"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,16,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
